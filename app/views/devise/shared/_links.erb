<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="text-center"><%= link_to "Forgot your password?", new_password_path(resource_name) %></div>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class="text-center"><%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %></div>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.omniauthable? && controller_name == 'sessions' %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <div id="fbLogin">
      <%= link_to "<i class='fa fa-facebook'></i> Log in with Facebook".html_safe, omniauth_authorize_path(resource_name, provider), :class=> "btn btn-primary btn-block facebook" %>
    </div>
  <% end -%>
<% end -%>
